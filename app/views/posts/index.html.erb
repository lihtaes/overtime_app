<h1>Time Entries</h1>
<table class="table table-hover table-striped">
<thead>
  <tr>
    <th>
     Log #
    </th>
    <th>
      Date
    </th>
    <th>
      Employee Name
    </th>
    <th>
      Rationale
    </th>
  </tr>
</thead>
<tbody>
  <% @posts.each do |post| %>
    <tr>
      <td>
       <%= post.id %>
      </td>
      <td>
        <%= post.date %>
      </td>
      <td>
        <%= post.user.last_name %>
      </td>
      <td>
        <%= post.rationale.truncate(25) %>
      </td>
    </tr> 
  <% end %>
</tbody>
</table>