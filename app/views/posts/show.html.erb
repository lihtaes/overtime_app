<div class="row">
  <div class=" col-md-offset-3 col-md-6">
    <div>
      <h4>Rationale for Overtime Request</h4>
    </div>
    <div>
      <p><%= @post.rationale %><p>
    </div>

    <div class="well">
      <div>
        <h4><span>Overtime Amount Requested:</span> <%= @post.overtime_request %></h4>
      </div>
      <div>
        <h4><span>Employee:</span> <%= @post.user.full_name %></h4>
      </div>
      <div>
        <h4><span>Date:</span> <%= @post.date %></h4>
      </div>
      <div>
        <h4><span>Current Stage of Approval:</span> <%= @post.status %></h4>
      </div>
        <%= render partial: "shared/status_controls", locals: {pending_approval: @post }%>
    </div>
  </div>
</div>