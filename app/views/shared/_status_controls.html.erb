<div class="btn-group">
  <button type="button" class="btn btn-warning btn-block dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    Status Options <span class="caret"></span>
  </button>
  <ul class="dropdown-menu">
    <li>
      <%= link_to 'Approve', approve_post_path(pending_approval), id:"approve_#{pending_approval.id}" %>
    </li>
    <li>
      <%= link_to 'Reject', reject_post_path(pending_approval), id:"reject_#{pending_approval.id}" %>
    </li>
    <li>
      <%= link_to 'Edit entry', edit_post_path(pending_approval) if policy(pending_approval).update? && current_page?(post_path(pending_approval)) %>  
    </li>
    <li>
      <%= link_to 'Review', post_path(pending_approval) unless current_page?(post_path(pending_approval)) %>
    </li> 
  </ul>
</div>